class Solution {
    public int countNegatives(int[][] grid) {
        int row = grid[0].length;
        int col = grid.length;
        
        int c = 0;
        
        for(int i = 0; i < col; i++){
            for(int j = 0; j < row; j++){
                if(grid[i][j] < 0) c++;
            }
        }
        
        return c;
    }
}
